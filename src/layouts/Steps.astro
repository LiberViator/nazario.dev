---
import Title from "../components/Title.astro";
import StepCard from "../components/StepCard.astro";

const { stepsList } = Astro.props;
---

<section id="steps" class="flex w-full flex-col items-center overflow-hidden py-12 md:py-16">
	<div class="flex w-full flex-col items-center gap-x-8">
		<Title text="Etapy DziaÅ‚ania" />
		<div class="swiper paddings mb-8 w-full touch-pan-x lg:px-[max(calc((100vw-1152px)/2),theme(spacing.12))]">
			<ul class="swiper-wrapper flex w-max">
				{
					stepsList?.map((_step) => (
						<StepCard id={_step.id} title={_step.title} desc={_step.desc} image={_step.image} isCTA={_step.isCTA} />
					))
				}
			</ul>
		</div>
		<div class="relative flex flex-row items-center gap-4">
			<button aria-label="Previous step" class="swiper-button-prev">
				<img src="/assets/arrow_nav.svg" alt="Previous step" width="24" height="24" class="rotate-180" />
			</button>
			<span class="swiper-pagination w-12 text-center text-base text-slate-500"></span>
			<button aria-label="Next step" class="swiper-button-next">
				<img src="/assets/arrow_nav.svg" alt="Next step" width="24" height="24" />
			</button>
		</div>
	</div>
</section>
<script src="../scripts/slider.js"></script>
