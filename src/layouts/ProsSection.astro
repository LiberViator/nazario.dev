---
import Title from "../components/Title.astro";
import ProsCard from "../components/ProsCard.astro";

const { prosList } = Astro.props;
---

<section
  class="flex flex-col items-center w-full px-6 py-12 bg-white md:px-12 md:py-16"
>
  <div class="flex flex-col items-center w-full max-w-6xl gap-x-8">
    <Title text="Zalety" />
    <div
      class="grid w-full grid-cols-1 gap-12 md:gap-8 md:grid-cols-2 lg:grid-cols-4"
    >
      {
        prosList?.map((_pros) => (
          <ProsCard title={_pros.title} desc={_pros.desc} image={_pros.desc} />
        ))
      }
    </div>
  </div>
</section>
