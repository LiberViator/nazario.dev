---
import Title from "../components/Title.astro";
import Form from "../components/Form.astro";

const {} = Astro.props;
---

<section
  id="contact"
  class="sm:paddings flex w-full flex-col items-center overflow-hidden bg-slate-900 bg-contact-gradient pt-12 md:pt-16"
>
  <div class="flex w-full max-w-6xl flex-col items-center">
    <Title text="Kontakt" />
    <div class="grid w-full grid-cols-1 gap-x-8 gap-y-16 lg:grid-cols-2">
      <Form />
      <ul
        class="max-sm:paddings flex w-full flex-col gap-8 self-center lg:pl-[16%] lg:pb-16"
      >
        <li>
          <a
            href="mailto:nazar.poplavsky@gmail.com"
            class="flex flex-row gap-4 text-h5"
          >
            <img src="/email.svg" alt="Email" width="24" height="24" />
            nazar.poplavsky@gmail.com
          </a>
        </li>
        <li>
          <a href="tel:698284677" class="flex flex-row gap-4 text-h5">
            <img src="/phone.svg" alt="Phone" width="24" height="24" />
            +48 698 284 677
          </a>
        </li>
        <li class="flex flex-row gap-4 text-h5">
          <img src="/location.svg" alt="Location" width="24" height="24" />
          Krak√≥w, Polska
        </li>
      </ul>
      <!-- <img src="/sign.svg" alt="" class="absolute" /> -->
    </div>
  </div>
</section>
