---
import { Image } from "@astrojs/image/components";
const { title, desc, image } = Astro.props;
---

<div class="flex flex-col items-center">
  <div class="border-shine relative mb-6 h-32 w-32 rounded-xl bg-slate-700">
    <Image
      src={image}
      alt="Advantage illustration"
      format="svg"
      width="128"
      height="128"
    />
  </div>
  <h4 class="mb-4 text-center">{title}</h4>
  <p class="text-center text-slate-400">{desc}</p>
</div>
