---
const { text = "Przejd≈∫ do formularza", goToId = "user_name" } = Astro.props;
---

<a
	class="cta_link group flex w-fit items-center"
	onclick={`document.getElementById('${goToId}').focus()`}>
	<img
		class="mr-2 transition-transform duration-100 group-hover:translate-x-1"
		src="/assets/arrow_next.svg"
		alt="Step icon"
		width="16"
		height="16"
	/>
	<span class="text-base/[125%] text-yellow-200">
		{text}
	</span>
</a>
