---
const { title, content } = Astro.props;
---

<button
	onclick="const accordions = document.querySelectorAll('.accordion'); accordions.forEach(acc => this !== acc ? acc.classList.remove('accordion-active') : acc.classList.toggle('accordion-active'));"
	class="accordion border-shine relative overflow-hidden rounded-xl bg-slate-700 shadow-container">
	<div class="flex h-auto items-center py-3 pl-6 pr-2">
		<h5 class="mr-4 w-full text-left">{title}</h5>
		<img src="/assets/arrow_nav.svg" alt="" />
	</div>
	<div class="content text-slate-400">
		<p class="h-full px-6 pb-3 pt-2 text-left">{content}</p>
	</div>
</button>
