---
import ActionLink from "./ActionLink.astro";
const { id, title, desc, image, isCTA, order } = Astro.props;
---

<li x-ref="stepCard" class="swiper-slide flex flex-col items-center sm:items-start">
	<div class="border-shine relative mb-6 flex h-16 w-16 items-center justify-center rounded-xl bg-slate-700 shadow-container">
		<img src={image} alt="Step icon" width="32" height="32" />
	</div>
	<h4 class="mb-3 text-base/7 font-semibold">{title}</h4>
	<p class="mb-4 text-center text-base/8 text-slate-400 sm:text-left">{desc}</p>
	{isCTA ? <ActionLink text="Przejdź do formularza" goToId="user_name" /> : undefined}
</li>

