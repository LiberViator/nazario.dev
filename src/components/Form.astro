<form
  id="contact-form"
  action="https://api.web3forms.com/submit"
  method="POST"
  class="flex flex-col rounded-t-xl bg-form-gradient bg-slate-700 max-md:paddings md:px-8 pt-3 pb-16 max-lg:order-2 intersect:animate-form intersect-once"
>
  <input type="hidden" name="access_key" value={access_key} />
  <span
    class="flex w-full max-w-[24%] h-1 bg-slate-600 self-center rounded mb-6"
  ></span>
  <fieldset class="flex flex-col sm:flex-row w-full gap-x-4">
    <div class="flex flex-col w-full">
      <label for="user_name" class="mb-3 text-h5 text-slate-400">Imię:</label>
      <input
        id="user_name"
        type="email"
        class="w-full h-12 rounded-xl bg-slate-600 mb-4 px-6 py-3 text-h5"
        placeholder="twój@email.pl"
        required
      />
    </div>
    <div class="flex flex-col w-full">
      <label for="user_number" class="mb-3 text-h5 text-slate-400">Numer:</label
      >
      <input
        id="user_number"
        type="email"
        class="w-full h-12 rounded-xl bg-slate-600 mb-4 px-6 py-3 text-h5"
        placeholder="+48 *** *** ***"
        required
      />
    </div>
  </fieldset>
  <label for="user_email" class="mb-3 text-h5 text-slate-400">E-Mail:</label>
  <input
    id="user_email"
    type="email"
    class="flex w-full h-12 rounded-xl bg-slate-600 mb-4 px-6 py-3 text-h5"
    placeholder="twój@email.pl"
    required
  />
  <label for="user_message" class="mb-3 text-h5 text-slate-400"
    >Wiadomość:</label
  >
  <textarea
    id="user_message"
    class="flex text-p w-full min-h-[128px] rounded-xl bg-slate-600 mb-8 placeholder:text-slate-400 px-6 py-3 resize-none"
    placeholder="Cześć, Nazar! Mam swój barbershop w Krakowie. Chciałbym stronę-wizytówkę, która zainspiruje nowych ludzi do skorzystania z moich usług."
    required></textarea>
  <input type="hidden" name="redirect" value="https://web3forms.com/success" />
  <button type="submit" class="cta_button self-end w-full sm:w-64"
    >Wyślij wiadomość</button
  >
</form>
